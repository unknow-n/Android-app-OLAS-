<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nightmare.myapp.prov_req">

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_above="@+id/owntext"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:text="Company's Name"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="113dp" />

    <EditText
        android:id="@+id/comptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="107dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/owntext" />

    <EditText
        android:id="@+id/owntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="165dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Owner's Name"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="168dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/mobtext"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/loc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_marginBottom="72dp"
        android:layout_above="@+id/breq1"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='To add location click on "ADD LOCATION"'
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="346dp"
        android:layout_above="@+id/loc1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/breq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT REQ."
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="428dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp" />

    <EditText
        android:id="@+id/mobtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="number|phone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Mobile no."
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/mobtext"
        android:layout_alignBottom="@+id/mobtext"
        android:layout_alignParentStart="true" />
</RelativeLayout>
